<section class="panel">
<h4 class="panel-heading">Listing posts</h4>

<table class="table table-condensed">
  <thead class="table-heading">
    <tr>
      <th width="150">Title</th>
      <th >Body</th>
      <th width="210">Owner</th>
      <th width="30">Comments</th>
      <th width="170"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.user.email %></td>
        <td><%= post.comments.length %></td>
        <td>
          <%= link_to 'Show', post , class: 'label label-notify' %>
          <% if can? :update, post %>
         | <%= link_to 'Edit', edit_post_path(post), class: 'label label-warning btn-xs' %> | 
         <% end %>
         <% if can? :destroy, post %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'label label-danger btn-xs' %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Post %>
  <%= link_to 'New Post', new_post_path , class: 'btn btn-danger'%>
<% end %>
</section>