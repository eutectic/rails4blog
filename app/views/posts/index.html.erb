<section class="panel">
<h4 class="panel-heading">Listing posts</h4>

<table class="table table-condensed">
  <thead class="table-heading">
    <tr>
      <th>Title</th>
      <th width="50%">Body</th>
      <th width="210">User</th>
      <th width="30">Comments</th>
      <th width="150" class="pull-right">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.user.email %></td>
        <td><%= post.comments.length %></td>
        <td class="pull-right" >
          <%= link_to 'Show', post , class: 'label label-notify' %>
         | <%= link_to 'Edit', edit_post_path(post), class: 'label label-warning btn-xs' %> | 
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'label label-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path , class: 'btn btn-danger'%>
</section>